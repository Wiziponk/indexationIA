{
  "name": "indexationIA",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  // Enable Docker-in-Docker so you can run docker compose
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  // Forward ports (backend + frontend + redis)
  "forwardPorts": [8000, 5173, 6379],

  // VS Code extensions you might want
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  // Set env defaults
  "remoteEnv": {
    "VITE_API_BASE": "http://localhost:8000"
  },

  "postCreateCommand": "docker --version && docker compose version || true"
}
